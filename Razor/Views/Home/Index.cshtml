@{
    ViewData["Title"] = "Home Page";

    // ex 1
    string myname = "Samuele";
    string mysurname = "Benato";

    //ex 2
    int Numberssum(int n)
    {
        int sum = 0;
        for(int i = 0; i <= n; i++)
        {
            sum += i;
        }
        return sum;
    }

    //ex 3
    string word = "nel mezzo del cammin di nostra vita";
    int count = FindA(word);
    int FindA(string word)
    {
        int count = 0;
        foreach (char c in word)
        {
            if (c == 'a')
            {
                count++;
            }
        }
        return count;
    }

    //ex 4
    List<int> numbers = new List<int>();
    List<int> Numbers()
    {
        for(int i = 0; i <= 20; i++)
        {
            Random random = new Random();
            int randomNumber = random.Next(1, 91);
            if(randomNumber >= 20 && randomNumber <= 70)
            {
                numbers.Add(randomNumber);
            }
        }
        return numbers;
    }
    numbers = Numbers();

}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Razor</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <h2>1. @myname @mysurname</h2>
        <div class="pt-2"><strong>2.</strong> @Numberssum(3)</div>
        <div class="pt-2"><strong>3.</strong> nella frase "nel mezzo del cammin di nostra vita" ci sono @count "a"</div>
        <div class="pt-2">
            <strong>4. Lista numeri :</strong>
            <ol>
                @foreach (int num in numbers)
                {
                    <li> numero : @num</li>
                }
            </ol>
        </div>
        <div><strong>5.</strong> @DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")</div>
        <div class="pt-2">
            <strong>6.</strong>
            <p>a. Data di 7 giorni fa: @DateTime.Now.AddDays(-7).ToString("yyyy-MM-dd")</p>
            <p>b. Oggi è : @DateTime.Now.ToString("dddd")</p>
            <p>c. Tra un anno oggi sarà : @DateTime.Now.AddYears(1).ToString("dddd")</p>
        </div>
    </div>
    <style>
  
    </style>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
